; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

; PSR-1 and PSR-2
[*.php]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 4

[*.xml]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 4

[*.feature]
indent_style = space
indent_size = 2
